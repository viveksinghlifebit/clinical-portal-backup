{
  "name": "clinical-portal-backend",
  "version": "1.0.0",
  "description": "Clinical Portal Backend",
  "main": "./src/index.ts",
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.0"
    }
  },
  "scripts": {
    "compile": "tsc && npm run postCompile",
    "postCompile": "cp ./src/api/validation/specification.yaml ./dist/api/validation/",
    "prod": "NODE_PATH=./dist node ./dist/index.js",
    "start:dev": "npm run compile && node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "start": "nodemon --watch 'src/**' --ignore 'src/**/*.spec.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' --files -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "lint": "eslint --ext ts src",
    "prettier": "prettier --config .prettierrc 'src/**/*.{ts,js,yaml}' --write",
    "test:prettier": "prettier --list-different \"src/**/*.{ts,js,yaml}\""
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "helmet": "^4.6.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongoose": "^6.2.6",
    "morgan": "^1.10.0",
    "openapi-backend": "^3.9.2",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-localapikey-update": "^0.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.2",
    "@types/lodash": "^4.14.180",
    "@types/mongodb": "^4.0.7",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^14.18.12",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^8.4.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.2.1",
    "supertest": "^6.2.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "keywords": [
    "lifebit",
    "node",
    "api",
    "template"
  ],
  "author": "lifebit",
  "_moduleAliases": {
    "@core": "dist/core",
    "@schemas": "dist/services/schemas"
  }
}
